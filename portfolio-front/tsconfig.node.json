{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "ESNext",
        "skipLibCheck": true,
        // "esModuleInterop": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": false, // false to disallow importing .ts files, and required to be false with noEmit : false
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": false, // false to allow emission of output

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "composite": true // enable composite builds
    },
    "include": ["vite.config.mts"]
}
