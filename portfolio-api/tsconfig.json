{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifiers": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
